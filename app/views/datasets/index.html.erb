<h1>Open Data Sources
	<small>
		<% if session[:user_id] %>
			<%= link_to "Add a new dataset", new_dataset_url %>
		<% else %>
			<%= link_to "Sign in to add a dataset", new_dataset_url %>
		<% end %>	
	</small>
</h1>

<%= will_paginate @datasets %>
<ul>
  <% @datasets.each do |dataset| %>
    <li><%= link_to dataset.database + " : " + dataset.table, "/datasets/#{dataset.id}" %></li>
  <% end %>
</ul>
<%= will_paginate @datasets %>